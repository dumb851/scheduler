<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <RadioGroup
        android:id="@+id/dialog_color_picker_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/dialog_color_picker_rb_red"
            style="@style/MyRadioButton"
            android:layout_width="match_parent"
            android:buttonTint="@color/color_LED_red"
            android:text="@string/red" />

        <RadioButton
            android:id="@+id/dialog_color_picker_rb_orange"
            style="@style/MyRadioButton"
            android:layout_width="match_parent"
            android:buttonTint="@color/color_LED_orange"
            android:text="@string/orange" />

        <RadioButton
            android:id="@+id/dialog_color_picker_rb_yellow"
            style="@style/MyRadioButton"
            android:layout_width="match_parent"
            android:buttonTint="@color/color_LED_yellow"
            android:text="@string/yellow" />

        <RadioButton
            android:id="@+id/dialog_color_picker_rb_green"
            style="@style/MyRadioButton"
            android:layout_width="match_parent"
            android:buttonTint="@color/color_LED_green"
            android:text="@string/green" />

        <RadioButton
            android:id="@+id/dialog_color_picker_rb_blue"
            style="@style/MyRadioButton"
            android:layout_width="match_parent"
            android:buttonTint="@color/color_LED_blue"
            android:text="@string/blue" />

        <RadioButton
            android:id="@+id/dialog_color_picker_rb_cyan"
            style="@style/MyRadioButton"
            android:layout_width="match_parent"
            android:buttonTint="@color/color_LED_cyan"
            android:text="@string/cyan" />

        <RadioButton

            android:id="@+id/dialog_color_picker_rb_white"
            style="@style/MyRadioButton"
            android:layout_width="match_parent"
            android:text="@string/white" />

        <RadioButton

            android:id="@+id/dialog_color_picker_rb_none"
            style="@style/MyRadioButton"
            android:layout_width="match_parent"
            android:text="@string/none" />

    </RadioGroup>


</android.support.constraint.ConstraintLayout>